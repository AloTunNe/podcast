<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rcv_Episode_Main_Banner"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="42dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:scrollbarSize="0.01dp"
    app:circularflow_defaultRadius="10dp"
    app:circularflow_radiusInDP="100dp"
    app:layout_constraintCircleRadius="20dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgEpisodeBackgroundBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        app:shapeAppearanceOverlay="@style/roundimageview" />

    <TextView
        android:id="@+id/tv_Episode_Main_Banner_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:text="Name Of Episode"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/ic_label_new" />

    <TextView
        android:id="@+id/tv_Episode_Main_Banner_Views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="42dp"
        android:text="Views: "
        android:textColor="@color/white"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/tv_Episode_Main_Banner_Avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/tv_Episode_Main_Banner_Author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="68dp"
        android:layout_marginBottom="51dp"
        android:text="Tran Quoc Cuong"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/imb_Episode_Main_Banner_Avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginRight="288dp"
        android:layout_marginBottom="14dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="109dp"
        android:layout_height="104dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="-13dp"
        android:background="@drawable/ic_play"
        android:scaleType="fitXY"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>