<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="380dp"
            android:layout_height="720dp"
            android:background="@drawable/second_bg_register"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/logo"
                    android:contentDescription="@string/logo" />
                <TextView
                    android:id="@+id/headline"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="130dp"
                    android:text="@string/episodic_series_of_digital_audio"
                    android:textSize="24sp"
                    android:layout_marginStart="40dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginTop="220dp"
                    android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_marginStart="45dp"
                                            android:layout_marginTop="19dp"
                                            android:contentDescription="@string/icon_email"
                                            android:src="@drawable/ic_mail" />

                                        <ImageView
                                            android:layout_width="300dp"
                                            android:layout_height="65dp"
                                            android:layout_marginStart="30dp"
                                            android:contentDescription="@string/email_hint"
                                            android:src="@drawable/text_input" />

                                        <EditText
                                            android:id="@+id/email_input"
                                            android:layout_width="230dp"
                                            android:layout_height="65dp"
                                            android:layout_marginStart="80dp"
                                            android:layout_marginTop="-2dp"
                                            android:autofillHints="emailAddress"
                                            android:background="@null"
                                            android:hint="@string/email_hint"
                                            android:inputType="textEmailAddress"
                                            android:textColor="@color/white"
                                            android:textColorHint="@color/grey"
                                            android:textSize="16sp" />

                                </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginStart="-370dp"
                            android:layout_marginTop="80dp"
                            android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_marginStart="45dp"
                                            android:layout_marginTop="19dp"
                                            android:contentDescription="@string/icon_key"
                                            android:src="@drawable/ic_key" />

                                        <ImageView
                                            android:layout_width="300dp"
                                            android:layout_height="65dp"
                                            android:layout_marginStart="30dp"
                                            android:contentDescription="@string/password_hint"
                                            android:src="@drawable/text_input" />

                                        <EditText
                                            android:id="@+id/password_input"
                                            android:layout_width="230dp"
                                            android:layout_height="65dp"
                                            android:layout_marginStart="80dp"
                                            android:layout_marginTop="-2dp"
                                            android:autofillHints="password"
                                            android:background="@null"
                                            android:hint="@string/password_hint"
                                            android:inputType="textPassword"
                                            android:textColor="@color/white"
                                            android:textColorHint="@color/grey"
                                            android:textSize="16sp" />

                                </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginStart="-370dp"
                            android:layout_marginTop="80dp"
                            android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_marginStart="45dp"
                                            android:layout_marginTop="19dp"
                                            android:contentDescription="@string/icon_key"
                                            android:src="@drawable/ic_key" />

                                        <ImageView
                                            android:layout_width="300dp"
                                            android:layout_height="65dp"
                                            android:layout_marginStart="30dp"
                                            android:src="@drawable/text_input" />

                                        <EditText
                                            android:id="@+id/password_hint"
                                            android:layout_width="230dp"
                                            android:layout_height="65dp"
                                            android:layout_marginStart="80dp"
                                            android:layout_marginTop="-2dp"
                                            android:background="@null"
                                            android:inputType="textPassword"
                                            android:textColor="@color/white"
                                            android:textColorHint="@color/grey"
                                            android:textSize="16sp"
                                            android:hint="@string/password_hint"
                                            android:autofillHints="password"
                                            />

                                </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginStart="-370dp"
                            android:layout_marginTop="165dp"
                            android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_marginStart="45dp"
                                            android:layout_marginTop="19dp"
                                            android:contentDescription="@string/icon_key"
                                            android:src="@drawable/ic_key" />

                                        <ImageView
                                            android:layout_width="300dp"
                                            android:layout_height="65dp"
                                            android:layout_marginStart="30dp"
                                            android:contentDescription="@string/password_confirm"
                                            android:src="@drawable/text_input" />

                                        <EditText
                                            android:id="@+id/password_confirm"
                                            android:layout_width="230dp"
                                            android:layout_height="65dp"
                                            android:layout_marginStart="80dp"
                                            android:layout_marginTop="-2dp"
                                            android:autofillHints="password"
                                            android:background="@null"
                                            android:hint="@string/password_confirm"
                                            android:inputType="textPassword"
                                            android:textColor="@color/white"
                                            android:textColorHint="@color/grey"
                                            android:textSize="16sp" />

                                </RelativeLayout>

                        </LinearLayout>

                </LinearLayout>

                <!--button login other-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/info"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                        <!--<LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="50dp"
                            android:orientation="vertical">

                        </LinearLayout>
-->                        <Button
                            android:id="@+id/btn_register"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="40dp"
                            android:background="@drawable/btn_register_shape"
                            android:text="@string/register"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btn_sign_in"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="-300dp"
                            android:layout_marginTop="90dp"
                            android:background="@drawable/btn_login_shape"
                            android:text="@string/sign_in"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                </LinearLayout>
        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>